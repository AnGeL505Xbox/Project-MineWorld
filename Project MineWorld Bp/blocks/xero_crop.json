{
    "format_version": "1.16.0",
    "minecraft:block": {
        "description": {
            "identifier": "mineworld:xero_crop",
            "properties": { "mineworld:stage": [ 0, 1, 2, 3, 4 ] }
        },
        "components": {
            "minecraft:material_instances": {
                "*": {
                    "texture":"xCrop0",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:geometry": "geometry.xero_crop",
            "minecraft:entity_collision": false,
            "minecraft:pick_collision": {
                "origin": [ -8, 0, -8 ],
                "size": [ 8, 16, 8 ]
            },
            "minecraft:destroy_time": 0,
            "minecraft:friction": 0.6,
            "minecraft:map_color": "#000000",
            "minecraft:block_light_absorption": 0,
            "minecraft:random_ticking": { "on_tick": { "event": "mineworld:grow" } },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [ "up" ],
                        "block_filter": [ "farmland" ]
                    }
                ]
            }
        },
        "events":{
            "mineworld:grow": {
                "randomize": [
                    {
                        "weight": 1
                    },
                    {
                        "set_block_property":{ "mineworld:stage": "(q.block_property('mineworld:stage')<4) ? q.block_property('mineworld:stage') +1 : 4" },
                        "weight": 1
                    }
                ]
            },
            "mineworld:int": {
                "sequence": [
                    {
                        "spawn_loot": { "table": "loot_tables/blocks/xeroFruit" }
                    },
                    {
                        "set_block_property":{ "mineworld:stage": 3 }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('mineworld:stage') == 0",
                "components":{
                    "minecraft:material_instances": {
                        "*": {
                            "texture":"xCrop0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json"
                }
            },
            {
                "condition": "q.block_property('mineworld:stage') == 1",
                "components":{
                    "minecraft:material_instances": {
                        "*": {
                            "texture":"xCrop1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json"
                }
            },
            {
                "condition": "q.block_property('mineworld:stage') == 2",
                "components":{
                    "minecraft:material_instances": {
                        "*": {
                            "texture":"xCrop2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json"
                }
            },
            {
                "condition": "q.block_property('mineworld:stage') == 3",
                "components":{
                    "minecraft:material_instances": {
                        "*": {
                            "texture":"xCrop3",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json"
                }
            },
            {
                "condition": "q.block_property('mineworld:stage') == 4",
                "components":{
                    "minecraft:material_instances": {
                        "*": {
                            "texture":"xCrop4",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:on_interact": {
                        "event": "mineworld:int",
                        "target": "self"
                    },
                    "minecraft:loot": "loot_tables/blocks/xeroFruitSeeds.json"
                }
            }
        ]
    }
}