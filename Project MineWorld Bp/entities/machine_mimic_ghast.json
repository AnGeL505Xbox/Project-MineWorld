//Mineworld_entity_v2
{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "mineworld:machine_mimic_ghast",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"components": {

			//Machine pre-assets
			
            "minecraft:type_family": { "family": [ "machine" ] },
            "minecraft:loot": { "table": "loot_tables/entities/machine.json" },
            "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,3) : Math.Random(0,0.5)" },
            "minecraft:jump.static": {},
            "minecraft:behavior.random_look_around": {
                "priority": 4,
                "look_time": [ 2, 6 ]
            },
            "minecraft:nameable": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            "minecraft:despawn": {
				"filters": {
					"any_of": [
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 54
								}
							]
						},
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "inactivity_timer",
									"subject": "self",
									"value": 30
								},
								{
									"test": "random_chance",
									"value": 800
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 32
								}
							]
						}
					]
				}
			},

			//Machine mimic-ghast

		  	"minecraft:scale": { "value": 4 },
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:fire_immune": true,
			"minecraft:health": {
				"value": 10,
				"max": 10
			},
			"minecraft:collision_box": {
				"width": 1.5,
				"height": 1.5
			},
			"minecraft:movement": { "value": 0.02 },
			"minecraft:navigation.float": { "can_path_over_water": true },
			"minecraft:behavior.float_wander": {
				"priority": 2,
				"must_reach": true
			},
			"minecraft:can_fly": {},
			"minecraft:shooter": { "def": "minecraft:fireball" },
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "fall",
					"deals_damage": false
				}
			},
			"minecraft:behavior.float": { "priority": 0 },
			"minecraft:behavior.ranged_attack": {
				"priority": 1,
				"attack_radius": 16,
				"charge_shoot_trigger": 3,
				"charge_charged_trigger": 1
			},
			"minecraft:follow_range": {
				"value": 64,
				"max": 64
			},
			"minecraft:behavior.hurt_by_target": { "priority": 1 },
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 28
					}
				],
				"must_see": true
			}
		}
	}
}
