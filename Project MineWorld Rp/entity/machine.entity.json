{
   "format_version": "1.10.0",
   "minecraft:client_entity": {
      "description": {
         "identifier": "mineworld:machine",
         "materials": { "default": "spider" },
         "textures": { "default": "textures/entity/machine/machine" },
         "geometry": { "default": "geometry.machine" },
         "scripts": {
            "pre_animation":[
               "v.unWeapon = ( q.mark_variant == 0 ) ? 1 : 0;",
               "v.shield = ( q.mark_variant == 1 ) ? 1 : 0;",
               "v.turret = ( q.mark_variant == 2 ) ? 1 : 0;"
            ],
            "animate": [
               "look_at_target",
               "walk",
               { "attack": "query.has_target" }
            ]
         },
         "animations": {
            "look_at_target": "animation.machine.look_at_target",
            "walk": "animation.machine.walk",
            "attack": "animation.machine.attack"
         },
         "render_controllers": [ "controller.render.machine" ],
         "spawn_egg": {
            "texture": "mineworld_spawn",
            "texture_index": 1
         }
      }
   }
}
