//Project MineWorld Machine v1
{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mineworld:machine",
            "is_summonable": true,
            "is_spawnable": true,
            "is_experimental": false
        },
        "component_groups": {

            "machine:normal": {
                "minecraft:variant": { "value": 0 },
                "minecraft:health": {
                    "max": 15,
                    "value": 15
                },
                "minecraft:attack": { "damage": 5 },
                "minecraft:behavior.melee_attack": {
                    "priority": 2,
                    "track_target": true
                }
            },

            "machine:shield": {
                "minecraft:variant": { "value": 1 },
                "minecraft:health": {
                    "max": 20,
                    "value": 20
                },
                "minecraft:attack": { "damage": 6 },
                "minecraft:behavior.melee_attack": {
                    "priority": 2,
                    "track_target": true
                }
            },
            "machine:turret": {
                "minecraft:variant": { "value": 2 },
                "minecraft:health": {
                    "max": 16,
                    "value": 16
                },
                "minecraft:shooter": { "def": "mineworld:machineBullet" },
                "minecraft:behavior.ranged_attack": {
                    "priority": 4,
                    "burst_shots": 4,
                    "burst_interval": 0.3,
                    "charge_charged_trigger": 0,
                    "charge_shoot_trigger": 4,
                    "attack_interval_min": 3,
                    "attack_interval_max": 5,
                    "attack_radius": 16
                }
            },

            "machine:shield&turret": {
                "minecraft:variant": { "value": 3 },
                "minecraft:health": {
                    "max": 21,
                    "value": 21
                },
                "minecraft:attack": { "damage": 5 },
                "minecraft:behavior.melee_attack": {
                    "priority": 4,
                    "track_target": true
                },
                "minecraft:shooter": { "def": "mineworld:machineBullet" },
                "minecraft:behavior.ranged_attack": {
                    "priority": 4,
                    "burst_shots": 3,
                    "burst_interval": 0.4,
                    "charge_charged_trigger": 0,
                    "charge_shoot_trigger": 4,
                    "attack_interval_min": 3,
                    "attack_interval_max": 5,
                    "attack_radius": 16
                }
            }
        },

        "components": {
            		
			//Machine pre-assets
			
            "minecraft:type_family": { "family": [ "machine" ] },
            "minecraft:loot": { "table": "loot_tables/entities/machine.json" },
            "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,3.5) : Math.Random(0,0.5)" },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "avoid_portals": true,
                "avoid_water": true,
                "avoid_damage_blocks": true
            },
            "minecraft:behavior.random_stroll": { "priority": 5 },
            "minecraft:can_climb": {},
            "minecraft:behavior.mount_pathing": {
                "priority": 1,
                "target_dist": 0,
                "track_target": true
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "lava",
                        "damage_per_tick": 4,
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:behavior.random_look_around": {
                "priority": 4,
                "look_time": [ 2, 6 ]
            },
            "minecraft:nameable": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            "minecraft:despawn": {
				"filters": {
					"any_of": [
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 54
								}
							]
						},
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "inactivity_timer",
									"subject": "self",
									"value": 30
								},
								{
									"test": "random_chance",
									"value": 800
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 32
								}
							]
						}
					]
				}
			},

            //Machien normal

            "minecraft:collision_box": {
                "width": 0.5,
                "height": 0.5
            },
            "minecraft:behavior.hurt_by_target": { "priority": 1 },
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 2,
                "entity_types": [
                    {
                        "filters": {
                            "any_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "irongolem"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "snowgolem"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "villager"
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "player"
                                }
                            ]
                        }
                    }
                ],
                "must_reach": false,
                "must_see": true,
                "scan_interval": 10,
                "reselect_targets": true,
                "within_radius": 16
            },
            "minecraft:movement": { "value": 0.35 },
            "minecraft:scale": { "value": 1.5 }
        },
        
        "events": {
            "minecraft:entity_spawned": {
                "randomize": [
                    {
                        "weight": 8,
                        "add": { "component_groups": [ "machine:normal" ] }
                    },
                    {
                        "weight": 4,
                        "add": { "component_groups": [ "machine:shield" ] }
                    },
                    {
                        "weight": 4,
                        "add": { "component_groups": [ "machine:turret" ] }
                    },
                    {
                        "weight": 2,
                        "add": { "component_groups": [ "machine:shield&turret" ] }
                    }
                ]
            }
        }
    }
}