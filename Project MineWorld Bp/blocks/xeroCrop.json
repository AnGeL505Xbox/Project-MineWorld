{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "mineworld:xero_crop",
            "properties": {
                "mineworld:xeroStage": [0,1,2,3,4]
            }
        },
        "components": {
            "minecraft:block_light_absorption": 0,
            "minecraft:destroy_time": 1,
            "minecraft:entity_collision": false,
            "minecraft:explosion_resistance": 0,
            "minecraft:geometry": "geometry.xCrop",
            "minecraft:map_color": "#e6a648",
            "minecraft:placement_filter": { "conditions": [ { "block_filter": [ "farmland" ], "allowed_faces": [ "up" ] } ] },
            "minecraft:ticking": {
                "looping": false,
                "range": [ 0, 1 ],
                "on_tick": {
                    "event": "stage0",
                    "target": "self",
                    "condition": "!q.block_property('mineworld:xeroStage') == 1 || !q.block_property('mineworld:xeroStage') == 2 || !q.block_property('mineworld:xeroStage') == 3"
                }
            },
            "minecraft:display_name": "block.mineworld:xeroCrop"
        },
        "permutations": [
            {
                "condition": "q.block_property('mineworld:xeroStage') == 0",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json",
                    "minecraft:material_instances": { "*": { "texture": "xeroStageBase", "render_method": "blend" } },
                    "minecraft:ticking": {
                        "looping": false,
                        "range": [ 30, 50 ],
                        "on_tick": {
                            "event": "stage1", "target": "self",
                            "condition": "q.block_property('mineworld:xeroStage') == 0"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('mineworld:xeroStage') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json",
                    "minecraft:material_instances": { "*": { "texture": "xeroStage1", "render_method": "blend" } },
                    "minecraft:ticking": {
                        "looping": false,
                        "range": [ 45, 65 ],
                        "on_tick": {
                            "event": "stage2", "target": "self",
                            "condition": "q.block_property('mineworld:xeroStage') == 1"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('mineworld:xeroStage') == 2",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json",
                    "minecraft:material_instances": { "*": { "texture": "xeroStage2", "render_method": "blend" } },
                    "minecraft:ticking": {
                        "looping": false,
                        "range": [ 65, 85 ],
                        "on_tick": {
                            "event": "stage3", "target": "self",
                            "condition": "q.block_property('mineworld:xeroStage') == 2"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('mineworld:xeroStage') == 3",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/xeroSeeds.json",
                    "minecraft:material_instances": { "*": { "texture": "xeroStage3", "render_method": "blend" } },
                    "minecraft:ticking": {
                        "looping": false,
                        "range": [ 90, 120 ],
                        "on_tick": {
                            "event": "stageFinal", "target": "self",
                            "condition": "q.block_property('mineworld:xeroStage') == 3"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('mineworld:xeroStage') == 4",
                "components": {
                    "minecraft:on_interact": {
                        "event": "xeroFruit",
                        "target": "self"
                    },
                    "minecraft:loot": "loot_tables/blocks/xeroFruitSeeds.json",
                    "minecraft:material_instances": { "*": { "texture": "xeroStageFinal", "render_method": "blend" } }
                }
            }
        ],
        "events": {
            "stage0": { "set_block_property": { "mineworld:xeroStage": 0 } },
            "stage1": { "set_block_property": { "mineworld:xeroStage": 1 } },
            "stage2": { "set_block_property": { "mineworld:xeroStage": 2 } },
            "stage3": { "set_block_property": { "mineworld:xeroStage": 3 } },
            "stageFinal": { "set_block_property": { "mineworld:xeroStage": 4 } },
            "xeroFruit": { 
                "sequence": [
                    { "spawn_loot": { "table": "loot_tables/blocks/xeroFruit.json" } },
                    {"set_block_property": { "mineworld:xeroStage": 3 } }
                ]
            }
        }
    }
}