//Project MineWorld Machine v2
{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mineworld:machine",
            "is_summonable": true, "is_spawnable": true, "is_experimental": false
        },
        "component_groups": {
            //#region Estados de maquina
            "machine:neutral": {
                "minecraft:variant": { "value": 0 },
                "minecraft:tameable": {
                    "probability": 1.0,
                    "tame_items": "mineworld:machineChipAllie",
                    "tame_event": { "event": "mineworld:allie", "target": "self" }
                }
            },
            "machine:enemy": {
                "minecraft:variant": { "value": 1 },
                "minecraft:behavior.nearest_attackable_target": {
                    "entity_types": [
                       {
                            "filters": {
                                "any_of": [
                                    { "subject": "other", "test": "is_family", "value": "player" },
                                    { "subject": "other", "test": "is_family", "value": "villager" },
                                    { "subject": "other", "test": "is_family", "value": "irongolem" }
                                ]
                            },
                            "max_dist": 124
                        }
                    ],
                    "must_see": true,
                    "priority": 3
                },
                "minecraft:interact": {
					"interactions": [
						{
							"interact_text": "mineworld.machine:antivirus",
							"on_interact": {
								"event": "mineworld:neutral",
								"filters": {
									"all_of": [
										{
											"domain": "hand",
											"subject": "other",
											"test": "has_equipment",
											"value": "mineworld:machineChipNeutral"
										},
										{ "subject": "other", "test": "is_family", "value": "player" }
									]
								},
								"target": "self"
							},
							"play_sounds": "armor.equip_generic",
							"use_item": true
						}
					]
                },
                "minecraft:timer": {
                    "looping": false,
                    "randomInterval": true,
                    "time": [ 60, 360 ],
                    "time_down_event": { "event": "machine:evolutionEnemy" }
                }
            },
            "machine:enemy.unstable": {
                "minecraft:variant": { "value": 1 },
                "minecraft:behavior.nearest_prioritized_attackable_target": {
                    "priority": 2,
                    "attack_interval": 5,
                    "reselect_targets": true,
                    "target_search_height": 10,
                    "entity_types": [
                        {
                            "priority": 1,
                            "filters": { "test": "is_family", "subject": "other", "value": "player" }
                        },
                        {
                            "priority": 2,
                            "filters": { "subject": "other", "test": "is_family", "value": "machine" }
                        },
                        {
                            "priority": 5,
                            "filters": { "subject": "other", "test": "is_family", "value": "irongolem" }
                        },
                        {
                            "priority": 5,
                            "filters": { "subject": "other", "test": "is_family", "value": "snowgolem" }
                        },
                        {
                            "priority": 5,
                            "filters": { "subject": "other", "test": "is_family", "value": "villager" }
                        }
                    ]
                }
            },
            "machine:allie": {
                "minecraft:variant": { "value": 2 },
                "minecraft:health": { "max": 12, "value": 12 },
                "minecraft:interact": {
					"interactions": [
						{
							"interact_text": "mineworld.machine:shield",
							"on_interact": {
								"event": "mineworld:shield",
								"filters": {
									"all_of": [
										{
											"domain": "hand",
											"subject": "other",
											"test": "has_equipment",
											"value": "mineworld:machineShield"
										},
										{ "subject": "other", "test": "is_family", "value": "player" }
									]
								},
								"target": "self"
							},
							"play_sounds": "armor.equip_generic",
							"use_item": true
						},
						{
							"interact_text": "mineworld.machine:turret",
							"on_interact": {
								"event": "mineworld:turret",
								"filters": {
									"all_of": [
										{
											"domain": "hand",
											"subject": "other",
											"test": "has_equipment",
											"value": "mineworld:machineTurret"
										},
										{ "subject": "other", "test": "is_family", "value": "player" }
									]
								},
								"target": "self"
							},
							"play_sounds": "armor.equip_generic",
							"use_item": true
                        }
					]
				},
                "minecraft:is_tamed": {},
                "minecraft:behavior.follow_owner": {
                    "priority": 3,
                    "stop_distance": 3,
                    "start_distance": 10
                },
                "minecraft:behavior.owner_hurt_by_target": { "priority": 2 },
                "minecraft:behavior.owner_hurt_target": { "priority": 1 }
            },
            //#endregion
            //#region Armamento
            "machine:unWeapon": {
                "minecraft:mark_variant": { "value": 0 },
				"minecraft:health": { "value": 6, "max": 6 },
                "minecraft:attack": { "damage": 4 },
                "minecraft:behavior.melee_attack": { "priority": 2, "track_target": true }
            },
            "machine:shield": {
                "minecraft:mark_variant": { "value": 1 },
                "minecraft:health": { "max": 18, "value": 18 },
                "minecraft:attack": { "damage": 8 },
                "minecraft:behavior.melee_attack": { "priority": 2, "track_target": true }
            },
            "machine:turret": {
                "minecraft:mark_variant": { "value": 2 },
                "minecraft:health": { "max": 12, "value": 12 },
                "minecraft:shooter": { "def": "mineworld:machine_bullet" },
                "minecraft:behavior.ranged_attack": {
                    "priority": 4,
                    "burst_shots": 4,
                    "burst_interval": 0.3,
                    "charge_charged_trigger": 0,
                    "charge_shoot_trigger": 4,
                    "attack_interval_min": 3,
                    "attack_interval_max": 5,
                    "attack_radius": 16
                }
            }
            //#endregion
        },
        "components": {		
			//#region Machine pre-assets
			
            "minecraft:type_family": { "family": [ "machine" ] },
            "minecraft:loot": { "table": "loot_tables/entities/machine.json" },
            "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,3.5) : Math.Random(0,0.5)" },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "avoid_portals": true,
                "avoid_water": true,
                "avoid_damage_blocks": true
            },
            "minecraft:behavior.random_stroll": { "priority": 5 },
            "minecraft:can_climb": {},
            "minecraft:behavior.mount_pathing": {
                "priority": 1,
                "target_dist": 0,
                "track_target": true
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "lava",
                        "damage_per_tick": 4,
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:behavior.random_look_around": {
                "priority": 4,
                "look_time": [ 2, 6 ]
            },
            "minecraft:nameable": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            "minecraft:despawn": {
				"filters": {
					"any_of": [
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 54
								}
							]
						},
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "inactivity_timer",
									"subject": "self",
									"value": 30
								},
								{
									"test": "random_chance",
									"value": 800
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 32
								}
							]
						}
					]
				}
			},
            //#endregion
            //#region Machine

            "minecraft:collision_box": {
                "width": 0.5,
                "height": 0.5
            },
            "minecraft:movement": { "value": 0.35 },
            "minecraft:scale": { "value": 1.5 },
            "minecraft:behavior.hurt_by_target": { "priority": 3 }

            //#endregion
        },
        "events": {
            "minecraft:entity_spawned": {
                "randomize": [
                    {
                        "randomize": [
                            {
                                "weight": 50,
                                "add": { "component_groups": [ "machine:neutral" ] }
                            },
                            {
                                "weight": 50,
                                "add": { "component_groups": [ "machine:enemy" ] }
                            },
                            {
                                "weight": 20,
                                "add": { "component_groups": [ "machine:enemy.unstable" ] }
                            }
                        ]
                    },
                    {
                        "filters":  {
                            "any_of": [
                                { "test": "has_tag", "subject": "self", "value": "machine:enemy" },
                                { "test": "has_tag", "subject": "self", "value": "machine:enemy.unstable" }
                            ]
                        },
                        "randomize": [
                            {
                                "weight": 75,
                                "add": { "component_groups": [ "machine:unWeapon" ] }
                            },
                            {
                                "weight": 45,
                                "add": { "component_groups": [ "machine:shield" ] }
                            },
                            {
                                "weight": 45,
                                "add": { "component_groups": [ "machine:turret" ] }
                            }
                        ]
                    }
                ]
            },
            "mineworld:neutral": {
                "add": { "component_groups": [ "machine:neutral" ] },
                "remove": { "component_groups": [ "machine:enemy" ] }
            },
            "mineworld:allie": {
                "add": { "component_groups": [ "machine:allie" ] },
                "remove": { "component_groups": [ "machine:neutral" ] }
            },
            "mineworld:shield": {
                "add": { "component_groups": [ "machine:shield" ] },
                "remove": { "component_groups": [ "machine:unWeapon" ] }
            },
            "mineworld:turret": {
                "add": { "component_groups": [ "machine:turret" ] },
                "remove": { "component_groups": [ "machine:unWeapon" ] }
            },

            "mineworld:as_enemy": { "add": { "component_groups": [ "machine:unWeapon", "machine:enemy" ] } },
            "mineworld:as_neutral": { "add": { "component_groups": [ "machine:neutral", "machine:unWeapon" ] } },

            "mineworld:evolutionEnemy": {
                "randomize": [
                    {
                        "weight": 50,
                        "add": { "component_groups": [ "machine:turret" ] },
                        "remove": { "component_groups": [ "machine:unWeapon" ] }
                    },
                    {
                        "weight": 50,
                        "add": { "component_groups": [ "machine:shield" ] },
                        "remove": { "component_groups": [ "machine:unWeapon" ] }
                    }
                ]
            }
        }
    }
}