//Project MineWorld Machine v2
{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mineworld:machine_big",
            "is_summonable": true, "is_spawnable": true, "is_experimental": false
        },
        "component_groups": {
            //#region Estados de maquina
            "machine:neutral": {
                "minecraft:variant": { "value": 1 }
            },
            "machine:enemy": {
                "minecraft:variant": { "value": 1 },
                "minecraft:behavior.nearest_attackable_target": {
                    "entity_types": [
                       {
                          "filters": {
                             "any_of": [
                                { "subject": "other", "test": "is_family", "value": "player" },
                                { "subject": "other", "test": "is_family", "value": "villager" },
                                { "subject": "other", "test": "is_family", "value": "irongolem" }
                             ]
                          },
                          "max_dist": 124
                       }
                    ],
                    "must_see": true,
                    "priority": 2
                }
            },
            "machine:enemy.unstable": {
                "minecraft:variant": { "value": 1 },
                "minecraft:behavior.nearest_prioritized_attackable_target": {
                    "priority": 2,
                    "attack_interval": 5,
                    "reselect_targets": true,
                    "target_search_height": 10,
                    "entity_types": [
                        {
                            "priority": 1,
                            "filters": { "test": "is_family", "subject": "other", "value": "player" }
                        },
                        {
                            "priority": 2,
                            "filters": { "subject": "other", "test": "is_family", "value": "machine" }
                        },
                        {
                            "priority": 5,
                            "filters": { "subject": "other", "test": "is_family", "value": "irongolem" }
                        },
                        {
                            "priority": 5,
                            "filters": { "subject": "other", "test": "is_family", "value": "snowgolem" }
                        },
                        {
                            "priority": 5,
                            "filters": { "subject": "other", "test": "is_family", "value": "villager" }
                        }
                    ]
                }
            },
            //#endregion
            //#region Armamento
            "machine:unWeapon": {
                "minecraft:mark_variant": { "value": 0 },
                "minecraft:health": { "max": 40, "value": 40 }
            },
            "machine:shield": {
                "minecraft:variant": { "value": 1 },
                "minecraft:health": { "max": 50, "value": 50 }
            },
            "machine:turret": {
                "minecraft:mark_variant": { "value": 2 },
                "minecraft:health": { "max": 45, "value": 45 }
            },
            "machine:shieldTurret": {
                "minecraft:mark_variant": { "value": 3 },
                "minecraft:health": { "value": 55, "max": 55 },
                "minecraft:target_nearby_sensor": {
                    "inside_range": 0,
                    "outside_range": 4.0,
                    "must_see": true,
                    "on_inside_range": { "event": "mineworld:meele_atack", "target": "self" },
                    "on_outside_range": { "event": "mineworld:shoot_atack", "target": "self" },
                    "on_vision_lost_inside_range": { "event": "mineworld:shoot_atack", "target": "self" }
                }
            },
            //#endregion
            //#region Tipo de ataque
            "machine:attack": {
                "minecraft:attack": { "damage": 10 },
                "minecraft:behavior.melee_attack": { "priority": 2, "track_target": true }
            },
            "machine:shoot": {
                "minecraft:shooter": {  "def": "mineworld:machineBullet" },
                "minecraft:behavior.ranged_attack": {
                    "priority": 4,
                    "burst_shots": 2,
                    "burst_interval": 0.3,
                    "charge_charged_trigger": 0,
                    "charge_shoot_trigger": 4,
                    "attack_interval_min": 2,
                    "attack_interval_max": 3,
                    "attack_radius": 16
                }
            }
            //#endregion
        },
        "components": {

            //Machine pre-assets
			
            "minecraft:type_family": { "family": [ "machine" ] },
            "minecraft:loot": { "table": "loot_tables/entities/machine.json" },
            "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,3) : Math.Random(0,0.5)" },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "avoid_portals": true,
                "avoid_water": true,
                "avoid_damage_blocks": true
            },
            "minecraft:behavior.random_stroll": { "priority": 5 },
            "minecraft:can_climb": {},
            "minecraft:behavior.mount_pathing": {
                "priority": 1,
                "target_dist": 0,
                "track_target": true
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "lava",
                        "damage_per_tick": 4,
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:behavior.random_look_around": {
                "priority": 4,
                "look_time": [ 2, 6 ]
            },
            "minecraft:nameable": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            "minecraft:despawn": {
				"filters": {
					"any_of": [
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 54
								}
							]
						},
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "inactivity_timer",
									"subject": "self",
									"value": 30
								},
								{
									"test": "random_chance",
									"value": 800
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 32
								}
							]
						}
					]
				}
			},
            
            //Machine big
            
            "minecraft:collision_box": { "width": 0.5, "height": 1.5 },
            "minecraft:movement": { "value": 0.2 },
            "minecraft:scale": { "value": 2.5 },
            "minecraft:behavior.hurt_by_target": { "priority": 4 }
        },

        "events": {
            "minecraft:entity_spawned": {
                "sequence": [
                    {
                        "randomize": [
                            {
                                "weight": 75,
                                "add": { "component_groups": [ "machine:enemy" ] }
                            },
                            {
                                "weight": 45,
                                "add": { "component_groups": [ "machine:enemy" ] }
                            },
                            {
                                "weight": 25,
                                "add": { "component_groups": [ "machine:neutral" ] }
                            }
                        ]
                    },
                    {
                        "filters":  {
                            "any_of": [
                                { "test": "has_tag", "subject": "self", "value": "machine:enemy" },
                                { "test": "has_tag", "subject": "self", "value": "machine:enemy.unstable" }
                            ]
                        },
                        "randomize": [
                            {
                                "weight": 60,
                                "add": { "component_groups": [ "machine:unWeapon", "machine:attack" ] }
                            },
                            {
                                "weight": 40,
                                "add": { "component_groups": [ "machine:shield", "machine:attack" ] }
                            },
                            {
                                "weight": 40,
                                "add": { "component_groups": [ "machine:turret", "machine:shoot" ] }
                            },
                            {
                                "weight": 20,
                                "add": { "component_groups": [ "machine:shieldTurret" ] }
                            }
                        ]
                    }
                ]
            }
        }
    }
}