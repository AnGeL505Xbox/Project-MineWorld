//Project MineWorld Fenix v1
{
   "format_version": "1.16.0",
   "minecraft:entity": {
      "description": {
         "identifier": "mineworld:fenix",
         "is_spawnable": true,
         "is_summonable": true,
         "is_experimental": true,
         "scripts": { "animate": [ "dead_fenix" ] },
         "animations": { "dead_fenix": "controller.animation.dead_fenix" }
      },
      "components": {
         //#region Fly entity pre-assets
         "minecraft:breathable": { "total_supply": 15, "suffocate_time": 0 },
         "minecraft:nameable": {},
         "minecraft:movement": { "value": 0.01 },
         "minecraft:navigation.float": { "can_path_over_water": true },
         "minecraft:behavior.float_wander": {
            "priority": 1,
            "must_reach": true
         },
         "minecraft:can_fly": {},
         "minecraft:damage_sensor": { "triggers": { "cause": "fall", "deals_damage": false } },
         "minecraft:jump.static": {},
         "minecraft:behavior.float": { "priority": 0 },
         "minecraft:despawn": { "despawn_from_distance": { "max_distance": 128, "min_distance": 32 } },
         "minecraft:pushable": { "is_pushable": true, "is_pushable_by_piston": true },
         "minecraft:physics": {},
