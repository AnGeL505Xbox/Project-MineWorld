{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.chihuahua.move": {
            "initial_state": "walking",
            "states": {
                "walking": {
                    "animations": [
                        "walk",
                        "look_at_target"
                    ],
                    "transitions": [
                        { "sitting": "query.is_sitting" }
                    ],
                    "blend_transition": 0.2
                },
                "sitting": {
                    "animations": [
                        "sit",
                        "look_at_target"
                    ],
                    "transitions": [
                        { "walking": "!query.is_sitting" }
                    ],
                    "blend_transition": 0.2
                }
            }
        }
    }
}