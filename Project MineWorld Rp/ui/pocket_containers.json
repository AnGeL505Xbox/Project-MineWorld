//Mineworld projects
{
  "namespace": "pocket_containers",

  "chest_item_renderer": {
    "type": "custom",
    "renderer": "inventory_item_renderer",
    "size": [ 16, 16 ],
    "property_bag": {
      "#item_id_aux": 3538944,
      "#collection_name": "inventory_tab",
      "#collection_index": 0
    }
  },

  //#region Inventario

  "inventory_panel": {
    "type": "stack_panel",
    "size": [ "100% - 12px", "100% - 12px" ],

    "controls": [
      {
        "inventory_title_label_centerer": {
          "type": "panel",
          "size": [ "default", 14 ],

          "controls": [
            {
              "inventory_title_label": {
                "type": "label",
                "color": "$title_text_color",
                "text": "container.inventory",
                "size": [ "default", "100%" ]
              }
            }
          ]
        }
      },
      { "inventory_scroll_panel@pocket_containers.inventory_scroll_panel": { "size": [ "100%", "fill" ] } }
    ]
  },

  "inventory_scroll_panel@common.container_scroll_panel": { "$scrolling_content": "common.pocket_container_grid" },

  "left_panel": {
    "type": "stack_panel",
    "size": [ "fill", "100%" ],
    "orientation": "horizontal",

    "controls": [
      {
        "gamepad_helpers_and_tabs_holder": {
          "type": "panel",
          "size": [ "100%c", "100%" ],
          "controls": [
            {
              "tabs_left_gamepad_helpers@common.tabs_left_gamepad_helpers": {
                "size": [ 14, 0 ],
                "inherit_max_sibling_height": true,
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left"
              }
            },
            {
              "navigation_tabs_holder": {
                "type": "panel",
                "size": [ "100%c - 4px", "100%" ],
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "controls": [
                  { "left_navigation_tabs@stonecutter_pocket.left_navigation_tabs": {} }
                ]
              }
            }
          ]
        }
      },
      {
        "content@common.root_panel": {
          "size": [ "fill", "100%" ],
          "controls": [
            {
              "bg@common.common_panel": {
                "size": [ "100%", "100%" ],
                "$show_close_button": false
              }
            },
            {
              "inventory_panel@pocket_containers.inventory_panel": {
                "layer": 2,
                "bindings": [
                  {
                    "binding_type": "global",
                    "binding_name": "#is_left_tab_inventory",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "left_tab_inventory@common_tabs.pocket_tab_left": {
    "$tab_view_binding_name": "inventory_tab_toggle",
    "$toggle_group_forced_index": "$left_tab_index_inventory",

    "$tab_content": "pocket_containers.chest_item_renderer",

    "$toggle_binding_type": "global",
    "$toggle_state_binding_name": "#is_left_tab_inventory"
  },

  "left_navigation_tabs": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ 35, "100%" ],
    "offset": [ 4, 0 ],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "controls": [ { "left_tab_inventory@pocket_containers.left_tab_inventory": { "$is_bottom_most_tab": false } } ]
  },

  //#endregion
  //#region Chest

  "inventory_grid": {
    "type": "grid",
    "grid_rescaling_type": "horizontal",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "size": [ "100%", "default" ],
    "maximum_grid_items": "$container_size",
    "collection_name": "$pane_collection",
    "grid_item_template": "common.pocket_ui_container_item",
    "$item_collection_name": "$pane_collection"
  },

  "container_panel": {
    "type": "panel",
    "size": [ "80%", "95%" ],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [
      {
        "scrolling_panel@common.scrolling_panel": {
          "layer": 1,
          "$scrolling_pane_size": [ "100%", "100%-2px" ],
          "$scrolling_content": "pocket_containers.inventory_grid",
          "$scroll_box_mouse_image_control": "common-classic.button_state_default",
          "$scroll_size": [ "8px", "100%" ]
        }
      }
    ]
  },
  
  "half_screen": {
    "type": "panel",
    "size": [ "100%", "100%-27px" ],
    "offset": [ 0, 27 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      { "container_panel@container_panel": {} }
    ]
  },

  "right_panel": {
    "type": "stack_panel",
    "size": [ "fill", "100%" ],
    "orientation": "horizontal",

    "controls": [
      {
        "content@common.root_panel": {
          "size": [ "fill", "100%" ],
          "controls": [
            {
              "bg@common.common_panel": {
                "size": [ "100%", "100%" ],
                "$show_close_button": false
              }
            },
            {
              "half_screen@pocket_containers.half_screen": {
                "layer": 2
              }
            }
          ]
        }
      },
      {
        "navigation_tabs_holder": {
          "type": "panel",
          "size": [ "100%c - 4px", "100%" ],
          "controls": [
            { "right_navigation_tabs@pocket_containers.right_navigation_tabs": {} }
          ]
        }
      }
    ]
  },

  "right_tab_chest@common_tabs.pocket_tab_right": {
    "$tab_view_binding_name": "chest_tab_toggle",

    "$tab_content": "pocket_containers.chest_item_renderer",

    "$toggle_binding_type": "global",
    "$toggle_state_binding_name": "#is_right_tab_pocket_containers"
  },

  "right_navigation_tabs": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ 35, "100%" ],
    "offset": [ -4, 0 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      { "pocket_tab_close_and_help_button@common_tabs.pocket_tab_close_and_help_button": {} },
      {
        "fill": {
          "type": "panel",
          "size": [ "100%", "fill" ]
        }
      },
      {
        "right_tab_chest@pocket_containers.right_tab_chest": {
          "$is_bottom_most_tab": true
        }
      }
    ]
  },

  //#endregion

  //#Base
  "pocket_hotbar_and_content_panels@common.pocket_hotbar_and_content_panels": {
    "layer": 2,
    "$left_panel_control": "pocket_containers.left_panel",
    "$right_panel_control": "pocket_containers.right_panel"
  },

  "pocket_panel": {
    "type": "panel",
    "controls": [
      { "pocket_hotbar_and_content_panels@pocket_containers.pocket_hotbar_and_content_panels": {} },

      {
        "container_gamepad_helpers@common.container_gamepad_helpers": {
          "size": [ "100%", 40 ],
          "$gamepad_helper_size": [ "100%c", 15 ],
          "$a_b_stack_panel_orientation": "vertical",
          "$x_y_stack_panel_orientation": "vertical",
          "$a_b_stack_panel_size": [ "100%cm", "100%" ],
          "$x_y_stack_panel_size": [ "100%cm", "100%" ]
        }
      },
      { "selected_item_details_factory@common.selected_item_details_factory": {} },
      {
        "item_lock_notification_factory@common.item_lock_notification_factory": {
          "$offset": [ 0, "85%" ]
        }
      },
      { "inventory_selected_icon_button@common.inventory_selected_icon_button": {} },
      { "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": {} },
      {
        "flying_item_renderer@common.flying_item_renderer": {
          "layer": 8
        }
      }
    ]
  },
  //#endregion
  //#region Others containers

  "small_chest_panel@pocket_panel": { "$container_size": 27 },
  "large_chest_panel@pocket_panel": { "$container_size": 54 },

  "hopper_panel@pocket_panel": { "$container_size": 5 },

  "dispenser_panel@pocket_panel": { "$container_size": 9 },
  "dropper_panel@pocket_panel": { "$container_size": 9 },

  "ender_chest_panel@pocket_panel": { "$container_size": 27 },
  "shulker_box_panel@small_chest_panel": {},
  "barrel_panel@small_chest_panel": {}

  //#endregion
}
