//Project MineWorld Machine v2
{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mineworld:machine_merchant",
            "is_summonable": true, "is_spawnable": true, "is_experimental": false
        },
        "component_groups": {
            "machine:normalMarket": {
                "minecraft:economy_trade_table": {
                    "display_name": "entity.mineworld:machine_merchant.name",
                    "table": "trading/machineMarket.json",
                    "new_screen": true,
                    "persist_trades": false
                }
            },
            "machine:blackMarket": {
                "minecraft:economy_trade_table": {
                    "display_name": "entity.mineworld:machine_merchant.name",
                    "table": "trading/machineBlackMarket.json",
                    "new_screen": true,
                    "persist_trades": false
                }
            },
            "machine:specialMarket": {
                "minecraft:economy_trade_table": {
                    "display_name": "entity.mineworld:machine_merchant.name",
                    "table": "trading/machineSpecialMarket.json",
                    "new_screen": true,
                    "persist_trades": false
                }
            }
        },
        "components": {
			//#region Machine pre-assets
			
            "minecraft:type_family": { "family": [ "machine" ] },
            "minecraft:loot": { "table": "loot_tables/entities/machine.json" },
            "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,3) : Math.Random(0,0.5)" },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "avoid_portals": true,
                "avoid_water": true,
                "avoid_damage_blocks": true
            },
            "minecraft:behavior.random_stroll": { "priority": 5 },
            "minecraft:can_climb": {},
            "minecraft:behavior.mount_pathing": {
                "priority": 1,
                "target_dist": 0,
                "track_target": true
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "lava",
                        "damage_per_tick": 4,
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:behavior.random_look_around": {
                "priority": 4,
                "look_time": [ 2, 6 ]
            },
            "minecraft:nameable": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            "minecraft:despawn": {
				"filters": {
					"any_of": [
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 54
								}
							]
						},
						{
							"all_of": [
								{
									"test": "is_persistent",
									"value": false
								},
								{
									"test": "inactivity_timer",
									"subject": "self",
									"value": 30
								},
								{
									"test": "random_chance",
									"value": 800
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 32
								}
							]
						}
					]
				}
			},
            //#endregion
            //#region Machine merchant
            "minecraft:collision_box": { "width": 0.5, "height": 0.5 },
            "minecraft:scale": { "value": 1.25 },
            "minecraft:behavior.trade_with_player": { "priority": 1 },
            "minecraft:movement": { "value": 0.3 }
            //#endregion
        },
        "events": {
            "minecraft:entity_spawned": {
                "randomize": [
                    {
                        "weight": 75,
                        "add": { "component_groups": [ "machine:normalMarket" ] }
                    },
                    {
                        "weight": 50,
                        "add": { "component_groups": [ "machine:blackMarket" ] }
                    },
                    {
                        "weight": 25,
                        "add": { "component_groups": [ "machine:specialMarket" ] }
                    }
                ]
            },
            "mineworld:as_merchant":{
                "randomize": [
                    {
                        "weight": 65,
                        "add": { "component_groups": [ "machine:normalMarket" ] }
                    },
                    {
                        "weight": 45,
                        "add": { "component_groups": [ "machine:blackMarket" ] }
                    },
                    {
                        "weight": 30,
                        "add": { "component_groups": [ "machine:specialMarket" ] }
                    }
                ]
            }
        }
    }
}