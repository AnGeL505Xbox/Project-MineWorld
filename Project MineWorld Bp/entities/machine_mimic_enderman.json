//Project MineWorld Machine v1
{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "mineworld:machine_mimic_enderman",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"components": {
            		
			//Machine pre-assets
			
            "minecraft:type_family": { "family": [ "machine" ] },
            "minecraft:loot": { "table": "loot_tables/entities/machine.json" },
            "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,3) : Math.Random(0,0.5)" },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "avoid_portals": true,
                "avoid_water": true,
                "avoid_damage_blocks": true
            },
            "minecraft:behavior.random_stroll": { "priority": 5 },
            "minecraft:can_climb": {},
            "minecraft:behavior.mount_pathing": {
                "priority": 1,
                "target_dist": 0,
                "track_target": true
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "lava",
                        "damage_per_tick": 4,
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:behavior.random_look_around": {
                "priority": 4,
                "look_time": [ 2, 6 ]
            },
            "minecraft:nameable": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            
			//Machine mimic-enderman
			
			"minecraft:health": {
				"value": 40,
				"max": 40
			},
			"minecraft:attack": { "damage": 7 },
			"minecraft:follow_range": {
				"value": 32,
				"max": 32
			},
			"minecraft:collision_box": {
				"width": 0.6,
				"height": 2.9
			},
			"minecraft:teleport": {
				"random_teleports": true,
				"max_random_teleport_time": 90,
				"random_teleport_cube": [ 32, 32, 32 ],
				"target_distance": 16,
				"target_teleport_chance": 0.05,
				"light_teleport_chance": 0.05
			},
			"minecraft:despawn": {
				"filters": {
					"any_of": [
						{
							"all_of": [
								{ "test": "is_persistent", "value": false },
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 54
								}
							]
						},
						{
							"all_of": [
								{ "test": "is_persistent", "value": false },
								{
									"test": "inactivity_timer",
									"subject": "self",
									"value": 30
								},
								{
									"test": "random_chance",
									"value": 800
								},
								{
									"test": "distance_to_nearest_player",
									"operator": ">",
									"value": 32
								}
							]
						}
					]
				}
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 5,
				"attack_interval": 10,
				"entity_types": [
					{
						"max_dist": 64,
						"filters": {
							"test": "is_family",
							"subject": "player",
							"operator": "==",
							"value": "player"
						}
					}
				],
				"must_see": true,
				"set_persistent": true,
				"persist_time": 4.9
			},
			"minecraft:behavior.melee_attack": { "priority": 2 },
			"minecraft:behavior.float": { "priority": 0 },
			"minecraft:behavior.look_at_player": {
				"priority": 8,
				"look_distance": 8,
				"probability": 8
			},
			"minecraft:behavior.look_at_entity": { "priority": 4 },
			"minecraft:behavior.hurt_by_target": { "priority": 3 }
		}
	}
}
