{
    "format_version": "1.16.200",
    "minecraft:block": {
        "description": {
            "identifier": "mineworld:opal_ore",
            "properties": {
                "mineworld:opal": [ "fire", "water", "normal" ]
            }
        },
        "components": {
            "minecraft:destroy_time": 1.5,
            "minecraft:explosion_resistance": 15,
            "minecraft:map_color": "#00f000",
            "minecraft:display_name": "mineworld:opalOre"
        },
        "permutations": [
            {
                "condition": "query.biome_has_any_tag('savanna', 'desert', 'mesa') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/opalFireOre.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "opalFire",
                            "render_method": "blend"
                        }
                    }
                }
            },
            {
                "condition": "query.biome_has_any_tag('river', 'ocean', 'beach', 'jungle', 'ice') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/opalWaterOre.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "opalWater",
                            "render_method": "blend"
                        }
                    }
                }
            },
            {
                "condition": "query.biome_has_any_tag('savanna', 'desert', 'mesa', 'river', 'ocean', 'beach', 'jungle', 'ice') == 0",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/opalOre.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "opal",
                            "render_method": "blend"
                        }
                    }
                }
            }
        ]
    }
}
