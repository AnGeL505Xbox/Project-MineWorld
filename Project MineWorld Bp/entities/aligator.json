//Project MineWorld Alligator v1
{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mineworld:aligator",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {

            "aligator:baby": {
                "minecraft:is_baby": {},
                "minecraft:collision_box": { "width": 0.6, "height": 0.1 },
                "minecraft:scale": { "value": 0.4 },
                "minecraft:ageable": {
                    "duration": 1200,
                    "feed_items": [ "beef" ],
                    "grow_up": {
                        "event": "minecraft:ageable_grow_up",
                        "target": "self"
                    }
                },
                "minecraft:attack": { "damage": 3 }
            },
            "aligator:adult": {
                "minecraft:experience_reward": { "on_death": "query.last_hit_by_player ? Math.Random(1,4) : 0" },
                "minecraft:collision_box": { "width": 0.8, "height": 0.2 },
                "minecraft:loot": { "table": "loot_tables/entities/aligator.json" },
                "minecraft:behavior.random_stroll": { "priority": 9, "interval": 100 },
                "minecraft:attack": { "damage": 6 }
            },

            "mineworld:skin_green": { "minecraft:skin_id": { "value": 0 } },
            "mineworld:skin_normal": { "minecraft:skin_id": { "value": 1 } },
            "mineworld:skin_black": { "minecraft:skin_id": { "value": 2 } },
            "mineworld:skin_albine": { "minecraft:skin_id": { "value": 3 } }
        },

        "components": {
            //#region Amphibia pre-assets

            "minecraft:breathable": {
                "total_supply": 15,
                "suffocate_time": 0,
                "breathes_water": true,
                "breathes_air": true,
                "generates_bubbles": false
            },
            "minecraft:nameable": {},
            "minecraft:damage_sensor": {
                "triggers": {
                    "cause": "lightning",
                    "deals_damage": true,
                    "damage_multiplier": 2000
                }
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "operator": "==",
                            "value": true
                        },
                        "cause": "lava",
                        "damage_per_tick": 4
                    }
                ]
            },
            "minecraft:movement": { "value": 0.15 },
            "minecraft:underwater_movement": { "value": 0.15 },
            "minecraft:navigation.generic": {
                "is_amphibious": true,
                "can_path_over_water": false,
                "can_swim": true,
                "can_walk": true,
                "can_sink": false,
                "avoid_damage_blocks": true
            },
            "minecraft:movement.amphibious": { "max_turn": 10 },
            "minecraft:jump.static": {},
            "minecraft:despawn": {
                "despawn_from_distance": {
                    "max_distance": 128,
                    "min_distance": 32
                }
            },
            "minecraft:behavior.move_to_water": {
                "priority": 3,
                "search_range": 16,
                "search_height": 5,
                "search_count": 1,
                "goal_radius": 0.1
            }, 
            "minecraft:behavior.random_swim": {
                "interval": 0,
                "priority": 5,
                "speed_multiplier": 1,
                "xz_dist": 30,
                "y_dist": 15
            },
            "minecraft:behavior.swim_idle": { "priority": 5 },
            "minecraft:behavior.random_look_around": {
                "priority": 5,
                "look_time": [ 3, 5 ]
            },
            "minecraft:behavior.move_to_land": {
                "priority": 6,
                "search_range": 16,
                "search_height": 5,
                "goal_radius": 0.5
            },
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:physics": {},
            //#endregion
            //#region Alligator

            "minecraft:type_family": { "family": [ "alligator" ] },
            "minecraft:health": { "value": 10 },
            "minecraft:behavior.hurt_by_target": { "priority": 1 },
            "minecraft:behavior.nearest_prioritized_attackable_target": {
                "priority": 6,
                "attack_interval": 5,
                "reselect_targets": true,
                "target_search_height": 10,
                "entity_types": [
                    {
                        "priority": 1,
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "sheep"
                        }
                    },
                    {
                        "priority": 3,
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "chicken"
                        }
                    },
                    {
                        "priority": 5,
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "player"
                        }
                    },
                    {
                        "priority": 7,
                        "filters": {
                            "all_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "sheep",
                                    "operator": "!="
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "player",
                                    "operator": "!="
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "chicken",
                                    "operator": "!="
                                },
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "mob"
                                }
                            ]
                        }
                    }
                ]
            },
            "minecraft:behavior.melee_attack": {
                "priority": 6,
                "speed_multiplier": 1.5,
                "track_target": true
            }
            //#endregion
        },
        "events": {
            "minecraft:entity_spawned": {
                "randomize": [
                    {
                        "randomize": [
                            {
                                "weight": 9,
                                "add": { "component_groups": [ "aligator:adult" ] }
                            },
                            {
                                "weight": 1,
                                "add": { "component_groups": [ "aligator:baby" ] }
                            }
                        ]
                    },
                    {
                        "randomize": [
                            {
                                "weight": 100,
                                "add": { "component_groups": [ "mineworld:skin_normal" ] }
                            },
                            {
                                "weight": 75,
                                "add": { "component_groups": [ "mineworld:skin_black" ] }
                            },
                            {
                                "weight": 20,
                                "add": { "component_groups": [ "mineworld:skin_albine" ] }
                            },
                            {
                                "weight": 5,
                                "add": { "component_groups": [ "mineworld:skin_green" ] }
                            }
                        ]
                    }
                ]
            },
            "minecraft:entity_born": { "add": { "component_groups": [ "aligator:baby" ] } },
            "minecraft:ageable_grow_up": {
                "add": { "component_groups": [ "aligator:adult" ] },
                "remove": { "component_groups": [ "aligator:baby" ] }
            }
        }
    }
}
