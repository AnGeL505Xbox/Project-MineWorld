{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.red_panda.move": {
            "initial_state": "walk",
            "states": {
                "walk": {
                    "animations": [ "walk", "look_at_target" ],
                    "transitions": [
                        { "sleep": "query.is_sleeping" },
                        { "sit": "query.is_sitting" }
                    ],
                    "blend_transition": 0.2
                },
                "sit": {
                    "animations": [ "sit" ],
                    "transitions": [ { "walk": "!query.is_sitting" } ],
                    "blend_transition": 0.2
                },
                "sleep": {
                    "animations": [ "sleep" ],
                    "transitions": [ { "walk": "!query.is_sleeping" } ],
                    "blend_transition": 0.2
                }
            }
        }
    }
}