//Project MineWorld ShadowBird v1
{
   "format_version": "1.16.0",
   "minecraft:entity": {
      "description": {
         "identifier": "mineworld:shadow_bird",
         "is_spawnable": true,
         "is_summonable": true,
         "is_experimental": false
      },
      "component_groups": {

         "mineworld:skull_bird_baby": {
            "minecraft:is_baby": {},
            "minecraft:scale": { "value": 0.85 },
            "minecraft:ageable": {
               "duration": 1200,
               "feed_items": [ "carrot", "beetroot", "potato" ],
               "grow_up": { "event": "minecraft:ageable_grow_up", "target": "self" }
            },
            "minecraft:behavior.follow_parent": { "priority": 3, "speed_multiplier": 1.1 }
         },
         "mineworld:skull_bird_adult": {
            "minecraft:experience_reward": {
               "on_bred": "Math.Random(1,7)",
               "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
            },
            "minecraft:loot": {
               "table": "loot_tables/entities/shadow_bird.json"
            },
            "minecraft:despawn": {
               "filters": {
                  "any_of": [
                     {
                        "all_of": [
                           {
                              "test": "is_persistent",
                              "value": false
                           },
                           {
                              "test": "distance_to_nearest_player",
                              "operator": ">",
                              "value": 54
                           }
                        ]
                     },
                     {
                        "all_of": [
                           {
                              "test": "is_persistent",
                              "value": false
                           },
                           {
                              "test": "inactivity_timer",
                              "subject": "self",
                              "value": 30
                           },
                           {
                              "test": "random_chance",
                              "value": 800
                           },
                           {
                              "test": "distance_to_nearest_player",
                              "operator": ">",
                              "value": 32
                           }
                        ]
                     }
                  ]
               }
            },
            "minecraft:behavior.breed": {
               "priority": 4,
               "speed_multiplier": 1
            },
            "minecraft:breedable": {
               "require_tame": false,
               "breeds_with": {
                  "mate_type": "mineworld:skull_bird",
                  "baby_type": "mineworld:skull_bird",
                  "breed_event": {
                     "event": "minecraft:entity_born",
                     "target": "baby"
                  }
               },
               "breed_items": [
                  "carrot",
                  "beetroot",
                  "potato"
               ]
            },
            "minecraft:scale": {
               "value": 2.1
            }
         },

         "mineworld:skull_bird_fly": {
            "minecraft:behavior.float_wander": {
               "must_reach": false,
               "random_reselect": false,
               "xz_dist": 50,
               "y_dist": 4,
               "y_offset": 2
            },
            "minecraft:flying_speed": { "value": 0.005 },
            "minecraft:movement": { "value": 0.02 },
            "minecraft:navigation.float": {
               "can_path_over_water": true,
               "avoid_damage_blocks": true
            },
            "minecraft:can_fly": {},
            "minecraft:movement.fly": { "max_turn": 30 }
         },
         "mineworld:skull_bird_walk": {
            "minecraft:navigation.generic": {
               "can_path_over_water": true,
               "can_sink": true,
               "avoid_portals": true
            },
            "minecraft:movement": { "value": 0.2 },
            "minecraft:movement.basic": { "max_turn": 30 }
         },

         "mineworld:skull_bird_switch": {
            "minecraft:timer": {
               "time": [ 10, 30 ],
               "looping": true,
               "time_down_event": { "event": "mineworld:fly_walk", "target": "self" }
            }
         },

         "mineworld:skull_bird_wild": {
            "minecraft:tameable": {
               "probability": 0.3,
               "tame_items": [
                  "minecraft:wheat_seeds",
                  "minecraft:beetroot_seeds"
               ],
               "tame_event": {
                  "event": "mineworld:tameable",
                  "target": "self"
               }
            },
            "minecraft:behavior.nearest_attackable_target": {
               "priority": 2,
               "attack_interval": 5,
               "reselect_targets": true,
               "must_see": true,
               "must_see_forget_duration": 5,
               "entity_types": [
                  {
                     "filters": {
                        "test": "is_family",
                        "value": "rabbit"
                     }
                  },
                  {
                     "filters": {
                        "test": "is_family",
                        "value": "chicken"
                     }
                  }
               ]
            }
         },
         "mineworld:skul_bird_tame": {
            "minecraft:is_tamed": {},
            "minecraft:behavior.follow_owner": {
               "priority": 3,
               "stop_distance": 5,
               "start_distance": 30
            },
            "minecraft:behavior.owner_hurt_by_target": {
               "priority": 2
            },
            "minecraft:behavior.owner_hurt_target": {
               "priority": 2
            },
            "minecraft:leashable": {
               "soft_distance": 4,
               "hard_distance": 6,
               "max_distance": 10,
               "on_leash": {
                  "event": "minecraft:on_leash",
                  "target": "self"
               },
               "on_unleash": {
                  "event": "minecraft:on_unleash",
                  "target": "self"
               }
            }
         }
      },
      "components": {
         //#region Bird pre-assets
         "minecraft:damage_sensor": { "triggers": { "deals_damage": false, "cause": "fall" } },
         "minecraft:breathable": { "total_supply": 15, "suffocate_time": 0 },
         "minecraft:nameable": {},
         "minecraft:hurt_on_condition": {
            "damage_conditions": [
               {
                  "filters": {
                     "test": "in_lava",
                     "subject": "self",
                     "operator": "==",
                     "value": true
                  },
                  "cause": "lava",
                  "damage_per_tick": 4
               }
            ]
         },
         "minecraft:jump.static": {},
         "minecraft:can_climb": {},
         "minecraft:balloonable": {
            "mass": 0.75
         },
         "minecraft:behavior.mount_pathing": {
            "priority": 1,
            "speed_multiplier": 1.25,
            "target_dist": 0,
            "track_target": true
         },
         "minecraft:behavior.random_stroll": { "priority": 7, "speed_multiplier": 1 },
         "minecraft:behavior.look_at_player": { "priority": 8, "look_distance": 6, "probability": 0.02 },
         "minecraft:behavior.random_look_around": { "priority": 9 },
         "minecraft:physics": {},
         "minecraft:pushable": { "is_pushable": true, "is_pushable_by_piston": true },
         "minecraft:behavior.float": { "priority": 1 },
         //#endregion
         //#region Skull bird
         "minecraft:type_family": { "family": [ "skull_bird", "mob" ] },         
         "minecraft:health": { "value": 10, "max": 10 },         
         "minecraft:collision_box": { "width": 0.5, "height": 0.5 },
         "minecraft:leashable": {
            "soft_distance": 4,
            "hard_distance": 6,
            "max_distance": 10
         },
         "minecraft:attack": { "damage": 3 },
         "minecraft:behavior.melee_attack": { "priority": 5, "reach_multiplier": 1 }
         //#endregion
      },
      "events": {
         "minecraft:entity_spawned": {
            "sequence":[
               {
                  "add":{
                     "component_groups": [
                        "mineworld:skull_bird_walk",
                        "mineworld:skull_bird_switch",
                        "mineworld:skull_bird_wild"
                     ]
                  }
               },
               {
                  "randomize": [
                     {
                        "weight": 8,
                        "add": { "component_groups": [ "mineworld:skull_bird_adult" ] }
                     },
                     {
                        "weight": 2,
                        "add": { "component_groups": [ "mineworld:skull_bird_baby" ] }
                     }
                  ]
               }
            ]
         },
         "minecraft:entity_born": { "add": { "component_groups": [ "mineworld:skull_bird_baby" ] } },
         "minecraft:ageable_grow_up": {
            "remove": { "component_groups": [ "mineworld:skull_bird_baby" ] },
            "add": { "component_groups": [ "mineworld:skull_bird_adult" ] }
         },
         "mineworld:fly_walk": {
            "sequence": [
               {
                  "randomize": [
                     {
                        "weight": 5,
                        "remove": {
                           "component_groups": [
                              "mineworld:skull_bird_walk",
                              "mineworld:skull_bird_fly"
                           ]
                        },
                        "add": {
                           "component_groups": [
                              "mineworld:skull_bird_fly"
                           ]
                        }
                     },
                     {
                        "weight": 5,
                        "remove": {
                           "component_groups": [
                              "mineworld:skull_bird_walk",
                              "mineworld:skull_bird_fly"
                           ]
                        },
                        "add": {
                           "component_groups": [
                              "mineworld:skull_bird_walk"
                           ]
                        }
                     }
                  ]
               }
            ]
         },
         "mineworld:tameable": {
            "add": { "component_groups": [ "mineworld:skul_bird_tame" ] },
            "remove": { "component_groups": [ "mineworld:skull_bird_wild" ] }
         }
      }
   }
}
