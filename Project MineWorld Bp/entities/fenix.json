         "minecraft:collision_box": { "width": 1, "height": 2 },
         "minecraft:loot": { "table": "loot_tables/entities/fenix.json" },
         "minecraft:shooter": { "def": "mineworld:fenix_fireball" },
         "minecraft:type_family": { "family": [ "fenix" ] },
         "minecraft:fire_immune": true,
         "minecraft:scale": { "value": 3.5 },
         "minecraft:behavior.ranged_attack": {
            "priority": 1,
            "attack_radius": 20,
            "charge_shoot_trigger": 2,
            "charge_charged_trigger": 1
         },
         "minecraft:follow_range": { "value": 64, "max": 64 },
         "minecraft:behavior.hurt_by_target": { "priority": 1 },
         "minecraft:behavior.nearest_attackable_target": {
            "priority": 2,
            "entity_types": [
               {
                  "filters": { "test": "is_family", "subject": "other", "value": "pig" },
                  "max_dist": 28
               }
            ],
            "must_see": true
         }
         //#endregion
      }
   }
